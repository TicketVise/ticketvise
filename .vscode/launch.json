    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\backend\\manage.py",
            "cwd": "${workspaceFolder}\\backend",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\backend\\manage.py",
            "cwd": "${workspaceFolder}\\backend",
            "args": [
                "test"
            ],
            "django": true
        },
        {
            "name": "Test: Current File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\backend\\manage.py",
            "cwd": "${workspaceFolder}\\backend",
            "args": [
                "test",
                "--pattern=\"${fileBasename}\""
            ],
            "django": true
        },
    ]
}